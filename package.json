{
  "name": "twidge",
  "version": "1.0.0",
  "scripts": {
    "desktop:dev": "cd apps/desktop && pnpm dev",
    "desktop:build": "cd apps/desktop && pnpm build",
    "tauri:dev": "cd apps/src-tauri && cargo tauri dev",
    "tauri:build": "cd apps/src-tauri && cargo tauri build",
    "dev": "concurrently \"pnpm desktop:dev\" \"pnpm tauri:dev\"",
    "desktop": "cd apps/desktop && pnpm ",
    "prepare": "husky install",
    "format": "rome format --write ./*"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^5.40.0",
    "concurrently": "^7.4.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "rome": "0.10.1-next",
    "typescript": "^4.6.4"
  }
}
