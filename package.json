{
  "name": "twidge",
  "version": "1.0.0",
  "scripts": {
    "dev": "pnpm web dev",
    "build": "pnpm desktop build && pnpm tauri build",
    "prepare": "husky install",

    "desktop": "pnpm --filter desktop",
    "config": "pnpm --filter @twidge/config",
    "utils": "pnpm --filter @twidge/utils",
    "components": "pnpm --filter @twidge/components",
    "landing": "pnpm --filter landing",
    "web": "pnpm --filter web",
    "api": "pnpm --filter @twidge/server",

    "format": "prettier-eslint \"**/*.{jsx,tsx,js,ts}\" --write"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.41.0",
    "@typescript-eslint/parser": "^5.41.0",
    "concurrently": "^7.4.0",
    "eslint": "^8.26.0",
    "eslint-plugin-react": "^7.31.10",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "prettier-eslint-cli": "^7.1.0",
    "typescript": "^4.6.4"
  }
}