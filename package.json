{
  "name": "twidge",
  "version": "1.0.0",
  "scripts": {
    "desktop:dev": "cd apps/desktop && pnpm dev",
    "desktop:build": "cd apps/desktop && pnpm build",
    "tauri:dev": "cd apps/src-tauri && cargo tauri dev",
    "tauri:build": "cd apps/src-tauri && cargo tauri build",
    "dev": "concurrently \"pnpm desktop:dev\" \"pnpm tauri:dev\"",
    "build": "pnpm desktop:build && pnpm tauri:build",
    "prepare": "husky install",
    "format": "rome format --write ./*",
    "desktop": "pnpm --filter desktop",
    "config": "pnpm --filter @twidge/config",
    "utils": "pnpm --filter @twidge/utils",
    "components": "pnpm --filter @twidge/components",
    "landing": "pnpm --filter landing"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^5.40.0",
    "concurrently": "^7.4.0",
    "husky": "^8.0.1",
    "prettier": "^2.7.1",
    "rome": "0.10.1-next",
    "typescript": "^4.6.4"
  }
}